<h1>Changing your Stuff</h1>

<div style= "float:left">
	<%= render 'form' %>
</div>

<div style="float:right">
<h3>Add Tags</h3>
<%= render 'tags/form' %>
	<hr/>
	<h4>Associated Tags <%= @blog.tags.count %></h4>
